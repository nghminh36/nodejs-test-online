<div class="card-body" style="height: 74vh;">
    <% if (!arr[0]) { %>
    <p class="text-muted" style="font-size: 22px;margin:0 auto;display: flex;justify-content: center;flex-direction: column;">Bạn làm đề nào cả<br>Hãy thử làm một bài nào đó!</p>
    <% } %>
    <% if (arr) for (var i = arr.length-1; i>=0; i--){let each = arr[i]; %>
    <div class="card my-4 kshadow" style="background-color: rgb(211,212,214);border: none;">
        <div class="card-body my-2 mx-2" style="padding: 0;">
            <h1 class="text-right text-dark mr-3 responsive1" style="width: 50%;float: right;padding: 0;font-size: 46px;">
                <%- each.id %>
            </h1>
            <p class="text-left text-dark responsive pl-3" style="font-weight: bold;font-size: 25px;margin-bottom: 0;font-family: Montserrat, sans-serif;width: 50%;">
                <a id="postit" onclick="reAjax({what: 'ketqua'}, {what: 'ketqua', id:'<%-each.id%>'})" style="cursor:pointer;color:black; text-decoration:none">
                    <%- test[each.id].name %>
                </a>
            </p>
            <p class="text-left text-dark pl-3" style="font-family: Montserrat, sans-serif;">
                Giáo viên: <b>
                    <%- test[each.id].author %>
                </b>
            </p>
        </div>
    </div>
    <% } %>
</div>
<script>
<% if (typeof(data)!='undefined'){ %>
<% var obj = JSON.parse(data) %>
Swal.fire({
    icon: 'info',
    title: 'Thông báo!',
    text: '<%-obj.ask%> (bấm ra ngoài để thoát)',
    confirmButtonText: 'Có chứ!'
}).then(result => {
    if (result.value) {
        reAjax({ what: 'ketqua' }, { what: 'ketqua', id: '<%=obj.idmoilam%>' });
    }
});
<% } %>
</script>